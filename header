#ifndef NAVALE_H_INCLUDED
#define NAVALE_H_INCLUDED

#include <string.h>
//ASCII 64-74 (A-J)

typedef struct {int posx;  // Struct de 2 ccords qui serviront aux coups , aux marquages et au positionnement des bateaux
                int posy;
                } Coords;

typedef struct {char* nom;     //Struct des Navires
                int taille;//nombre de cases occupées par un navire
                Coords pos1;//coord première case occupée
                Coords pos2;//coord deuxième case occupée
                int hp;//points de vie du navire
                } Navire;

#endif // NAVALE_H_INCLUDED
